<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.devmon.crcp.ui.auth.register.RegisterViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.HomeFragment">

            <TextView
                android:id="@+id/textView"
                style="@style/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_118ccf"
                android:gravity="center"
                android:text="회원가입"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_begin="130dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_end="32dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="21dp"
                android:text="이름"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@+id/et_name"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toTopOf="@+id/et_name" />

            <EditText
                android:id="@+id/et_name"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:hint="ex) 홍길동"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="@={vm.name}"
                app:layout_constraintEnd_toEndOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:text="오우야" />

            <View
                android:id="@+id/view6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/et_name" />

            <TextView
                android:id="@+id/tv_email"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="이메일"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@+id/et_email"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="@+id/et_email" />

            <TextView
                android:id="@+id/tv_warning"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="이미 존재하는 아이디입니다."
                android:textColor="@color/color_black"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/et_password"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/et_email" />

            <EditText
                android:id="@+id/et_email"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="ex) crcp@naver.com"
                android:inputType="textEmailAddress"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="@={vm.email}"
                app:layout_constraintEnd_toEndOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/view6"
                tools:text="takedawon@naver.com" />

            <View
                android:id="@+id/view7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/et_email" />

            <TextView
                android:id="@+id/tv_password"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="비밀번호"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@+id/et_password"
                app:layout_constraintStart_toStartOf="@+id/tv_email"
                app:layout_constraintTop_toTopOf="@+id/et_password" />

            <EditText
                android:id="@+id/et_password"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="ex) ********"
                android:inputType="textPassword"
                android:maxLength="13"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@={vm.password}"
                app:layout_constraintEnd_toEndOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/view7" />

            <TextView
                android:id="@+id/tv_password_warning"
                style="@style/regular_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="*숫자, 문자, 특수문자의 조합으로 8개 이상"
                android:textColor="#AFAFAF"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/et_password" />

            <View
                android:id="@+id/view9"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/tv_password_warning" />

            <View
                android:id="@+id/view8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/et_password_confirm" />

            <View
                android:id="@+id/view11"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_dadada"
                app:layout_constraintBottom_toTopOf="@+id/et_birth"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/et_phone" />

            <View
                android:id="@+id/view12"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/et_birth" />

            <View
                android:id="@+id/view14"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/rg_gender" />

            <TextView
                android:id="@+id/tv_password_confirm"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="비밀번호 확인"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@+id/et_password_confirm"
                app:layout_constraintStart_toStartOf="@+id/tv_password"
                app:layout_constraintTop_toTopOf="@+id/et_password_confirm" />


            <EditText
                android:id="@+id/et_password_confirm"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="ex) ********"
                android:inputType="textPassword"
                android:maxLength="13"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="@={vm.passwordConfirm}"
                app:layout_constraintEnd_toEndOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/view9" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="핸드폰"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@+id/et_phone"
                app:layout_constraintStart_toStartOf="@+id/tv_password_confirm"
                app:layout_constraintTop_toTopOf="@+id/et_phone" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="ex) 01012345678"
                android:inputType="phone"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="@={vm.phone}"
                app:layout_constraintEnd_toEndOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/view8" />

            <TextView
                android:id="@+id/tv_birth"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="생년월일"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@id/et_birth"
                app:layout_constraintStart_toStartOf="@+id/tv_phone"
                app:layout_constraintTop_toTopOf="@id/et_birth" />

            <EditText
                android:id="@+id/et_birth"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="ex) 19940510"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@={vm.birth}"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/view11" />

            <TextView
                android:id="@+id/tv_gender"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="성별"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@+id/rg_gender"
                app:layout_constraintStart_toStartOf="@+id/tv_birth"
                app:layout_constraintTop_toTopOf="@+id/rg_gender" />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:onCheckedChanged="@{(_, checkId)->vm.setGender(checkId)}"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/et_birth">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radio_agree"
                    android:button="@android:color/transparent"
                    tools:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="남" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/radio_agree"
                    android:button="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="여" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_terms"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/regular"
                android:text="회원가입 동의"
                android:textColor="@color/color_black"
                app:layout_constraintStart_toStartOf="@+id/tv_gender"
                app:layout_constraintTop_toBottomOf="@+id/view14" />

            <Button
                android:id="@+id/tv_terms_content"
                style="@style/regular_14"
                onThrottleClick="@{() -> vm.onClickTerms()}"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/bg_corner_2_solid_118ccf"
                android:overScrollMode="always"
                android:padding="4dp"
                android:scrollbars="vertical"
                android:text="동의서 보기"
                android:textColor="@color/color_white"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toTopOf="@+id/tv_terms" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onCheckedChanged="@{(_, checkId)->vm.setRegisterAgree(checkId)}"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toBottomOf="@+id/tv_terms_content">

                <RadioButton
                    android:id="@+id/rb_agree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radio_agree"
                    android:button="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="동의" />

                <RadioButton
                    android:id="@+id/rb_disagree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/radio_agree"
                    android:button="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="미동의" />
            </RadioGroup>

            <View
                android:id="@+id/view15"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

            <!-- 본인인증 -->
            <TextView
                android:id="@+id/tv_pass_label"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="본인인증"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@id/btn_pass"
                app:layout_constraintStart_toStartOf="@+id/tv_terms"
                app:layout_constraintTop_toTopOf="@id/btn_pass" />

            <TextView
                android:id="@+id/tv_pass"
                style="@style/regular_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/regular"
                android:text="@{vm.passVerifyText}"
                app:layout_constraintBottom_toBottomOf="@+id/btn_pass"
                app:layout_constraintEnd_toStartOf="@id/btn_pass"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toTopOf="@+id/btn_pass"
                app:textColor="@{vm.passVerifyTextColor}"
                tools:text="미완료"
                tools:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/btn_pass"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_corner_2_solid_118ccf"
                android:enabled="@{vm.enablePass}"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="본인인증"
                android:textColor="@color/color_fff"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@id/view15"
                app:layout_constraintTop_toBottomOf="@id/view15"
                app:layout_constraintVertical_bias="0.035"
                app:onThrottleClick="@{() -> vm.requestPass()}" />

            <View
                android:id="@+id/view16"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/color_dadada"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guide_start"
                app:layout_constraintTop_toBottomOf="@+id/btn_pass" />

            <!-- 모바일 앱 사용동의 -->
            <TextView
                android:id="@+id/tv_mobile_term_label"
                style="@style/regular_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/regular"
                android:text="모바일 앱\n사용동의"
                android:textColor="@color/color_black"
                app:layout_constraintBottom_toBottomOf="@id/rg_mobile_term"
                app:layout_constraintStart_toStartOf="@+id/tv_phone"
                app:layout_constraintTop_toBottomOf="@+id/view16" />

            <RadioGroup
                android:id="@+id/rg_mobile_term"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onCheckedChanged="@{(_, checkId)->vm.setMobileAgree(checkId)}"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_mobile_term_label"
                app:layout_constraintEnd_toStartOf="@+id/guide_end"
                app:layout_constraintStart_toStartOf="@+id/guide_middle"
                app:layout_constraintTop_toTopOf="@+id/tv_mobile_term_label">

                <RadioButton
                    android:id="@+id/rb_mobile_agree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/radio_agree"
                    android:button="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="동의" />

                <RadioButton
                    android:id="@+id/rb_mobile_disagree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="28dp"
                    android:background="@drawable/radio_agree"
                    android:button="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="미동의" />
            </RadioGroup>

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/bg_corner_2_solid_118ccf"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="회원가입"
                android:textColor="@color/color_fff"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mobile_term_label"
                app:layout_constraintVertical_bias="0.0"
                app:onThrottleClick="@{()->vm.requestRegister()}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>