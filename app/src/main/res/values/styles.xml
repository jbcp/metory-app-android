<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_blue_400</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/color_blue_400</item>
        <item name="android:statusBarColor">@color/color_031966</item>
    </style>

    <style name="top_bar">
        <item name="android:background">@color/color_118ccf</item>
        <item name="android:textColor">@color/color_fff</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="light_10">
        <item name="fontFamily">@font/light</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="regular_9">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="regular_10">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="regular_12">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="regular_14">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="regular_16">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular_18">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bold">
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="bold_12">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="bold_14">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bold_16">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bold_18">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="medium_14">
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@color/color_white</item>
        <item name="tabTextColor">@color/color_blue_400</item>
        <item name="tabSelectedTextColor">@color/color_blue_900</item>
        <item name="tabBackground">@color/color_blue_200</item>
        <item name="tabIndicatorColor">@color/color_white</item>
        <item name="tabIndicatorGravity">stretch</item>
    </style>

    <color name="grey">#cdcdcd</color>
</resources>